<%= erb :base %>

<div class="container">
<form action="/chitter/save_new" method="post">
  <div class="form-group">
    <label for="exampleInputUserID">User ID</label>
    <input type="user_id" name="user_id" class="form-control" id="exampleInputUserID" aria-describedby="emailHelp" placeholder="Enter User ID">
  </div>
  <div class="form-group">
    <label for="exampleInputContent">Enter Post</label>
    <input type="content" name="content" class="form-control" id="exampleInputContent" aria-describedby="emailHelp" placeholder="Enter post">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>
